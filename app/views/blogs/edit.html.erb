
	<div class="body_edit">
		<div class="edit-top">
			<h1 class="edit-top-title"><strong>Editing Book</strong></h1>
		</div>

		<div class="edit-contents">

		<!-- form_for部分 -->
			<%= form_for(@blog) do |f| %>
  		 	 <h4 class="edit-title">Title</h4>
  		 	 <%= f.text_field :title, class: "book_title"%>

  		 	 <h4 class="edit-body">Body</h4>
  		 	 <%= f.text_area :body,class: "book_body" %>
  		 	 <br>
  		 	 <div class="update-book">
  		 	 <%= f.submit 'update book' %>
  		 	</div>
  			<% end %>

  		</div>


		<div class="edit-step">
			<div class="show-step">
			<%= link_to "Show", blog_path(@blog),class: "show_#{@blog.id}"%></div>
			<div class="show-item">|</div>
			<div class="back-step"><%=link_to "Back", blogs_path(@blog) ,class: "back"%></div>
		</div>
	</div>
