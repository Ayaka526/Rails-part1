
		<h1 class="index-top">Books</h1>


		<div class="index-item">

			<table >
				<thead>

          			<tr>
          			<th class="indextitle"><strong>Title</strong></th>
          			<th class="body"><strong>Body</strong></th>
          			<th class="contents"></th>
          			</tr>

          		</thead>

          		<tbody>


 				<% @blogs.each do |blog| %>
 					<tr class ="blogs-item">
             		<td class="blog-title"><%= blog.title%></td>

             		<td class="blog-text"><%= blog.body%></td>

             		<td class="blog-contents">
            		 <%= link_to "Show", blog_path(blog.id),class: "show_#{blog.id}"%>
           		  	<%=link_to "Edit", edit_blog_path(blog.id),class: "edit_#{blog.id}" %>
					<%= link_to 'Destroy',blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' } ,class: "destroy_#{blog.id}"%>
					</td>
 					 </tr>

        		<% end %>
        		</tbody>

       		 </table>


			</div>
				<div class="new-book">
				<h2 class="newbook-top">New book</h2>
				<!-- form_for部分 -->
				<%= form_for(@blog) do |f| %>

 				   <h4 class="newbook-title">Title</h4>

 				   <%= f.text_field :title ,class: "book_title"%>

				    <h4 class="newbook-body">Body</h4>

				    <%= f.text_area :body ,class: "book_body"%>
				    <br>

 				   <%= f.submit 'create box' %>
				<% end %>
				</div>

		</div>


